# node env ('production' or 'development')
NODE_ENV="production"

# general
TRUST_PROXY="uniquelocal" # empty to disable
ENABLED_PROTOCOLS="http" # ('http', 'https')
ENABLED_REDIRECT_HTTP_HTTPS="no" # redirect http to https ('yes' or 'no')
INDEX_REDIRECT_TYPE="permanent" # ('temporary' or 'permanent')
INDEX_REDIRECT_URL="https://web-tech.tw"

# http
HTTP_PORT="3000"
HTTP_HOSTNAME="0.0.0.0"

# https
HTTPS_PORT="3500"
HTTPS_HOSTNAME="127.0.0.1"
HTTPS_KEY_PATH="/some/where.key"
HTTPS_CERT_PATH="/some/where.crt"

# database
MONGODB_URI="$FREYA_MONGODB_URI"

# cors
ENABLED_CORS="no" # cors ('yes' or 'no'), CORS_ORIGIN is required
ENABLED_CORS_ORIGIN_CHECK="no" # is the API public to every client ('yes' or 'no')
CORS_ORIGIN="https://example.org"

# api docs server
ENABLED_SWAGGER="no" # swagger ('yes' or 'no')
SWAGGER_SERVER_DESCRIPTION="default"
SWAGGER_CORS_ORIGIN="http://127.0.0.1:3000"
SWAGGER_SERVER_URL="http://127.0.0.1:3000"

# mail sender
MAIL_SMTP_HOST="smtp.mailgun.org"
MAIL_SMTP_PORT="465"
MAIL_SMTP_SECURE="yes"
MAIL_SMTP_USERNAME="postmaster@web-tech.tw"
MAIL_SMTP_PASSWORD="$MAIL_SMTP_PASSWORD"
MAIL_SMTP_FROM='"Freya" <noreply-freya@web-tech.tw>'

# sara configs
SARA_RECV_HOST="http://sara-recv:3000" # replace the field with your sara.recv entrypoint
SARA_AUDIENCE_URL="https://web-tech.tw"

# turnstile config
TURNSTILE_SECRET_KEY="$TURNSTILE_SECRET_KEY"

# freya config
FREYA_INTE_HOST="https://web-tech.tw/freya"
FREYA_PAIRING_SECRET="$FREYA_PAIRING_SECRET"
FREYA_CHEERIO_USER_AGENT="Mozilla/5.0 (Linux; Android 4.4.2; Desire HD Build/KVT49L) AppleWebKit/537.36 (KHTML, like Gecko) Version/4.0 Mobile Safari/537.36"
